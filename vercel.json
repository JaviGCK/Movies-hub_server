{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "server/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/server/(.*)",
            "dest": "server/$1"
        },
        {
            "src": "/client(.*)",
            "dest": "client/$1"
        }
    ]
}